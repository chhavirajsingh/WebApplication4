@model WebApplication4.Model.Employee
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header">
                <h4>Edit Employee</h4>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "Employee", FormMethod.Post))
                {
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="form-group">
                        <label>Employee Name</label>
                        <input type="text" class="form-control" name="Name" value="@Model.Name" />
                    </div>

                    <div class="form-group">
                        <label>Employee Email</label>
                        <input type="text" class="form-control" name="Email" value="@Model.Email" />
                    </div>

                    <div class="form-group">
                        <label>Employee Salary</label>
                        <input type="number" class="form-control" name="Salary" value="@Model.Salary" />
                    </div>

                    <div class="form-group">
                        <label>Employee Mobile</label>
                        <input type="text" class="form-control" name="Mobile" value="@Model.Mobile" />
                    </div>

                    <div class="form-group">
                        <label>Employee Gender</label>
                        <select class="form-control" name="Gender" value="@Model.Gender">
                            <option value="">Select</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-info" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>


